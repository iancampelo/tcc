package br.com.ucb.factory;

import java.sql.DriverManager;
import java.sql.SQLException;

import com.mysql.jdbc.Connection;

public class ConnectionFactory {
		
	public static Connection getConnection() throws SQLException {
		try {
			Class.forName("com.mysql.jdbc.Driver");
			String sql = "jdbc:mysql://localhost/assistentereflexivo";
			return DriverManager.getConnection(sql, "root", "root");
		}
		catch (ClassNotFoundException e) {
			throw new SQLException("Driver não localizado. ClassNotFoundException: "+ e.getMessage());
		}
	}
	
}
